extends layouts/login-layout.pug 

block content 
    .loginContainer 
        h1 Login 
        form(method="post") 
            p.errorMessage #{errorMessage}
            input(type="text", name="logUserName",placeholder="username/email",value=logUserName,required="")
            input(type="password", name="logPassword",placeholder="password",required="")
            input(type="submit", value="Login")
        a(href="/register") Need an account ? Register  